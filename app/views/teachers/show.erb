<%if logged_in? %>
<p align="right"><a href="/logout">Log out</a>
<%end%>
<h2> Show page </h2><br>
<h3>Name: <%= @teacher.name %> </h3>
Associated course : <%= @teacher.course ? @teacher.course.title: N/A %> <br>

